@page "/capabilityView"
@inject HttpClient Http

<h1>Capability View</h1>

<div>
    @if (capabilitiesList == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <select name="capabilities" onchange="@LoadDataAsync" >
            @foreach (var capabilityItem in capabilitiesList)
            {
                <option value="@capabilityItem.Id">@capabilityItem.Name</option>
            }
        </select>
    }
</div>

@if (capabilityMatrix == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Capability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in capabilityMatrix)
            {
                <tr>
                    <td>@item.Product</td>
                    <td>@item.HasCapability</td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {


    tcm.model.CapabilityMatrix[] capabilityMatrix;
    tcm.model.Capability[] capabilitiesList;
    tcm.model.Capability selectedCapability = new tcm.model.Capability();
    bool initialized = false;

    protected override async Task OnInitAsync()
    {
        try
        {
            string url = new Uri("http://localhost:5001/api/Capabilities/Network|0.1").AbsoluteUri;


            capabilityMatrix = await Http.GetJsonAsync<tcm.model.CapabilityMatrix[]>("sample-data/singleCapabilityManyProducts.json");
            capabilitiesList = await Http.GetJsonAsync<tcm.model.Capability[]>(url);
            initialized = true;
            System.Diagnostics.Debug.WriteLine("Initialized...");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine(ex.ToString());
        }
    }

    public async Task LoadDataAsync(UIChangeEventArgs e)
    {



        string url = new Uri("http://localhost:5001/api/values/Network|0.1/" + e.Value.ToString()).AbsoluteUri;

        System.Diagnostics.Debug.WriteLine("LoadDataAsync... ");
        selectedCapability.Id = e.Value.ToString();
        if (initialized == true && selectedCapability != null)
        {
            capabilityMatrix = await Http.GetJsonAsync<tcm.model.CapabilityMatrix[]>(url);

        }
    }

}
